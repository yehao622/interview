        "better-sqlite3": "^12.6.2",
        "cors": "^2.8.6",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "sqlite3": "^5.0.2"
    },
    "devDependencies": {
        "jest": "^30.2.0",
        "supertest": "^7.2.2"
    }
}